hose {
    EMAIL = 'lgutierrez'
    BUILDTOOL = 'maven'
    //BUILDTOOL_IMAGE = "stratio/qa-builder:0.4.0"
    INSTALLTIMEOUT = 720


    INSTALL = { config ->
        doKeosInstall(config)
        doJiraUpdate(
